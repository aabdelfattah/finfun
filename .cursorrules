# Ignore build and dependency directories
node_modules/
dist/
build/
__pycache__/
*.pyc

# Ignore environment and config files
.env
.env.*
*.config.js
*.config.ts
package.json
package-lock.json

# Ignore test coverage reports
coverage/
.nyc_output/

# Ignore IDE specific files
.idea/
.vscode/
*.swp
*.swo

# Ignore log files
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Ignore temporary files
*.tmp
*.temp
.DS_Store

# Include specific directories for better search
include: src/
include: finfun-py-api/
include: finfun-ts/

# Exclude specific patterns from search
exclude: **/*.test.ts
exclude: **/*.spec.ts
exclude: **/__tests__/
exclude: **/__mocks__/

# Define custom file associations
associate: *.tsx -> React
associate: *.ts -> TypeScript
associate: *.py -> Python

# Define custom search scopes
search_scope: frontend -> finfun-ts/frontend/src/
search_scope: backend -> finfun-ts/backend/src/
search_scope: python -> finfun-py-api/ 